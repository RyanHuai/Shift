<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="130dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/startLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:text="Start"/>

        <TextView
            android:id="@+id/startDateAndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/startLabel"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="2017-07-31 14:23"/>


        <TextView
            android:id="@+id/startLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/startDateAndTime"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="3 Jean Wailes Ave, Rhodes, NSW, Australia"/>

        <TextView
            android:id="@+id/endLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/startLocation"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:text="End"/>

        <TextView
            android:id="@+id/endDateAndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/endLabel"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="2017-08-31 14:23"/>


        <TextView
            android:id="@+id/endLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/endDateAndTime"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="3 Jean Wailes Ave, Rhodes, NSW, Australia"/>


    </RelativeLayout>



</LinearLayout>
